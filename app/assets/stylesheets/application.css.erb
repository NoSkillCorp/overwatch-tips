body {
    font-family: 'Century-Gothic' !important;
}

.standard-margin {
  margin-top: 100px;
}

.body-home {
    background-image: url('<%= asset_path('wallpaper2.jpg') %>');
    background-repeat: no-repeat;
    background-size:100% auto;
    background-color: #F1F2F2;
    background-attachment: fixed;
}

.h1-home {
  font-family: 'Big-Noodle-Italique' !important;
  font-size: 5em !important;
  text-align:center;
  text-shadow: 2px 2px black;
}

.body-else {
    background-color: #F1F2F2;
}

.home-welcome {
    color: white;
    font-size: 30px;
    font-weight: 600;
}

.navbar {
  border-radius: 0 !important;
}

.footer {
  padding-top: 1rem;
}

html {
  position: relative;
  min-height: 100%;
}

.main-container {
  /* Margin bottom by footer height */
  margin-bottom: 60px;
}

.error {
  color : #a94442;
}

.image-link:hover {
  background-color: transparent;
  text-decoration: none;
  -webkit-filter: brightness(50%);
  -moz-filter: brightness(50%);
  filter: brightness(50%);
}

.tips-and-votes-count {
  font-size: 1.5rem;
}

.page-title {
  font-family: 'Big-Noodle-Italique';
  font-size: 4em;
  margin-top: 0;
}
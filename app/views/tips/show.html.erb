<% tip = @tip %>

<div class="row">
    <div class="col-md-12">
        <h1 class="playing_sentence">
            <%= image_tag tip.gaming_object.image_path, class: "gaming_object_icon" %>
            <%= link_to tip.gaming_object, class: "btn-link" do %>
                <%= playing_sentence(tip.category, tip.gaming_object) %>
            <% end %>
        </h1>
    </div>
    
    <%= render partial: "tips/show", locals: {tip: tip, big_show: true} %>
    
    <% if @random_next_tip.present? %>
        <div class="col-md-12">
            <%= link_to character_tip_path(@random_next_tip.gaming_object, @random_next_tip), class: "btn btn-default" do %>
                <i class="fa fa-random" aria-hidden="true"></i> Random
            <% end %>
        </div>
    <% end %>
</div>


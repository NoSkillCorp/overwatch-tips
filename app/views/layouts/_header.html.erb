<div id="menu" class="navbar navbar-default " role="navigation">
    <div class="container-fluid">
        <div class="navbar-header"><a class="navbar-brand" href="<%= root_path %>"><%= image_tag "logo.png", class: "img-responsive logo-holder" %></a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse navbar-menubuilder">
            <ul class="nav navbar-nav navbar-left">
                <li class="<%='active' if controller_name == "home" && action_name == "news" %> dark-blue">
                    <%= link_to "HOT TIPS", news_path %>
                </li>
                <li class="<%='active' if controller_name == "gaming_objects" && params[:type] == "Character" %>">
                    <%= link_to "HEROES", characters_path %>
                </li>
                <li class="<%='active' if controller_name == "gaming_objects" && params[:type] == "Map" %>">
                    <%= link_to "MAPS", maps_path %>
                </li>
                <% if @user.present? && @user.persisted? %>
                    <li class="<%='active' if controller_name == "users" %>">
                        <%= link_to profile_path, class: "twitter-link" do %>
                            <i class="fa fa-star" aria-hidden="true"></i>
                        <% end %>
                    </li>
                <% end %>
                <li>
                    <%= link_to "https://twitter.com/0verwatchTips", target: :blank, class: "twitter-link" do %>
                        <i class="fa fa-twitter" aria-hidden="true"></i>
                    <% end %>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right tips-and-votes-count">
                <% if user_signed_in? %>
                    <li class="sign_out">
                        <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
                    </li>
                <% else %>
                    <li class="log_in">
                        <%= link_to "Log in", new_user_session_path %>
                    </li>
                    <!--li class="sign_up">
                        <%#= link_to "Sign up", new_user_registration_path %>
                    </li-->
                <% end %>
                
                <li>
                    <p class="navbar-text score">
                        Tips : <%= @tips_count %> / 
                        Votes : <%= @votes_count %>
                    </p>
                </li>
            </ul>
        </div>
    </div>
</div>
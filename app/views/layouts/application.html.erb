<!DOCTYPE html>
<html>
<head>
  <title>Overwatch-tips</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
  
  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" crossorigin="anonymous">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" crossorigin="anonymous"></script>
  
  <!-- SEO description for Google -->
  <meta name="description" content="Overwatch-tips is the best platform to write and share advice about Overwatch">
  <!-- verification tokens for google search -->
  <meta name="google-site-verification" content="Z_QK2B1vgP3o3GobLNqsmBV_EWZOgFnpQP5gHGTCXoo" />
  
  <!-- Script google analytics -->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
  
    ga('create', 'UA-51208390-4', 'auto');
    ga('send', 'pageview');

  </script>

</head>
<body class="<%= controller_name == "home" && action_name == "index" ? @is_mobile ? "body-mobile-home" : "body-home" : "body-else" %>">
  
  <%= render "layouts/header" %>
  
  <div class="main-container <%= @container %>">
    
      
      <% if notice.present? || alert.present? %>
        <%# notice & alerts get their own container if the main-container isn't one %>
        <div class="<%= 'container' if @container.blank? %>">
          <% if notice.present? %>
            <p class="alert success-notice"><%= notice %></p>
          <% end %>
          <% if alert.present? %>
            <p class="alert alert-notice"><%= alert %></p>
          <% end %>
        </div>
      <% end %>
      
      <%= yield %>
  </div>
  
  <%= render "layouts/footer" %>


</body>

  
</html>
